<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="3">

    <RelativeLayout
        android:id="@+id/ungradedExamItemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/examClassText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:minLines="1"
                android:text="Algebra"
                android:textColor="@color/IHWBrown"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Points: " />

                <TextView
                    android:id="@+id/examPointsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Term: " />

                <TextView
                    android:id="@+id/examTermText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A" />
            </LinearLayout>

            <TextView
                android:id="@+id/examDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fri, 23 Jul 10:30 AM" />

        </LinearLayout>

        <TextView
            android:id="@+id/examUngradeText"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:elevation="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="?"
            android:textSize="36sp"
            android:textStyle="normal" />
    </RelativeLayout>

</LinearLayout>

